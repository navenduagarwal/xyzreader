<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/card_space_margin"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--suppress AndroidLintContentDescription -->
        <com.example.xyzreader.ui.DynamicHeightNetworkImageView
            android:id="@+id/thumbnail"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/grey_300" />

        <TextView
            android:id="@+id/article_title"
            style="@style/TextAppearance.AppCompat.Small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="3"
            android:paddingEnd="@dimen/card_horizontal_margin"
            android:paddingLeft="@dimen/card_horizontal_margin"
            android:paddingRight="@dimen/card_horizontal_margin"
            android:paddingStart="@dimen/card_horizontal_margin"
            android:paddingTop="@dimen/card_horizontal_margin"
            android:textColor="@color/primary_text"
            tools:text="Heading" />

        <TextView
            android:id="@+id/article_author"
            style="@style/TextAppearance.AppCompat.Small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:paddingEnd="@dimen/card_horizontal_margin"
            android:paddingLeft="@dimen/card_horizontal_margin"
            android:paddingRight="@dimen/card_horizontal_margin"
            android:paddingStart="@dimen/card_horizontal_margin"
            android:textColor="@color/secondary_text"
            tools:text="Sub Heading" />

        <TextView
            android:id="@+id/article_date"
            style="@style/TextAppearance.AppCompat.Small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingBottom="@dimen/card_horizontal_margin"
            android:paddingEnd="@dimen/card_horizontal_margin"
            android:paddingLeft="@dimen/card_horizontal_margin"
            android:paddingRight="@dimen/card_horizontal_margin"
            android:paddingStart="@dimen/card_horizontal_margin"
            android:textColor="@color/secondary_text"
            tools:text="Sub Heading" />
    </LinearLayout>

</android.support.v7.widget.CardView>
